{
  "name": "staking-command-center",
  "version": "0.1.0",
  "private": true,
  "description": "Real-time monitoring dashboard for Polkadot and Kusama staking operations",
  "workspaces": [
    "packages/*",
    "shared"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:ordered": "./scripts/dev.sh",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "typecheck": "turbo run typecheck"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "turbo": "^1.11.0",
    "typescript": "^5.3.3"
  },
  "packageManager": "npm@10.2.3",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
